@page
@model WebApp.Pages_CourseDeclarations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CourseDeclaration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CourseDeclaration!.IsStudent" /> @Html.DisplayNameFor(model => model.CourseDeclaration!.IsStudent)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CourseDeclaration!.FinalGrade" class="control-label"></label>
                <input asp-for="CourseDeclaration!.FinalGrade" class="form-control" />
                <span asp-validation-for="CourseDeclaration!.FinalGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDeclaration!.PersonId" class="control-label"></label>
                <select asp-for="CourseDeclaration!.PersonId" class ="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseDeclaration!.CourseId" class="control-label"></label>
                <select asp-for="CourseDeclaration!.CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
