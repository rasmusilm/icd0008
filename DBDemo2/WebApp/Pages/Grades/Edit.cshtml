@page
@model WebApp.Pages_Grades.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade!.GradeId" />
            <div class="form-group">
                <label asp-for="Grade!.GradeValue" class="control-label"></label>
                <input asp-for="Grade!.GradeValue" class="form-control" />
                <span asp-validation-for="Grade!.GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade!.HomeworkId" class="control-label"></label>
                <select asp-for="Grade!.HomeworkId" class="form-control" asp-items="ViewBag.HomeworkId"></select>
                <span asp-validation-for="Grade!.HomeworkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade!.CourseDeclarationId" class="control-label"></label>
                <select asp-for="Grade!.CourseDeclarationId" class="form-control" asp-items="ViewBag.CourseDeclarationId"></select>
                <span asp-validation-for="Grade!.CourseDeclarationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
